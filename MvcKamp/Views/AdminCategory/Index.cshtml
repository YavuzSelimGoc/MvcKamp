@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Index</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <th>@item.CategoryID</th>
    <td>@item.CategoryName</td>
    <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">SİL</a></td>
    <td><a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-info">GUNCELLE</a></td>
    <td><a href="#" class="btn btn-warning">BASLİKLAR</a></td>

</tr>
    }
</table>
<a href="/AdminCategory/AddCategory"class="btn btn-success">Yeni Kayıt</a>

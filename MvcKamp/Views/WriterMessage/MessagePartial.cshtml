                        <span class="badge bg-primary float-right">@ViewBag.ReviceMessage</span>
                        <span class="badge bg-primary float-right">Okunmayan:@ViewBag.UnRead</span>

                        <span class="badge bg-primary float-right">Okunan:@ViewBag.Read</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterMessage/Sendbox/" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.SendMessage</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-file-alt"></i> Taslaklar
                    </a>
                </li>

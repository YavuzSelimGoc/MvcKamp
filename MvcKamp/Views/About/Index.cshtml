@using EntityLayer.Concrete
@model List<About>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<h2>Index</h2>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Hakkımda Başlığı</th>
            <th>Hakkımda Başlığı2</th>
            <th>Hakkımda Resmi</th>
            <th>Hakkımda Resmi2</th>
            <th>Durum</th>
        </tr>
        @foreach (var item in Model)
        {
<tr>
    <td>@item.AboutID</td>
    <td>@item.AboutDetails1</td>
    <td>@item.AboutDetails2</td>
    <td><img src="@item.AboutImage1" /></td>
    <td><img src="@item.AboutImage2"/></td>
    <td><a class="btn btn-@(item.AboutStatus==true ? "primary" : "danger")" href="@Url.Action("Delete","About", new { Id = item.AboutID })">@(item.AboutStatus == true ? "Pasif Yap" : "Aktif Yap")</a></td>
</tr>
}
        <tr></tr>
    </table>
    <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">YENİ HAKKIMIZDA YAZI GİRİSİ </button>
    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title">Hakkımızda Veri Girisi</h1>
                </div>
                <form method="post" action="/About/AddAbout">
                    <div class="modal-body">
                        <label>ABOUT DETAİLS 1</label>
                        <input type="text" name="AboutDetails1" class="form-control" />
                        <br />
                        <label>ABOUT DETAİLS 2</label>
                        <input type="text" name="AboutDetails2" class="form-control" />
                        <br />
                        <label>ABOUT IMAGE 1</label>
                        <input type="text" name="AboutImage1" class="form-control" />
                        <br />
                        <label>ABOUT IMAGE 1</label>
                        <input type="text" name="AboutImage2" class="form-control" />
                        <br />
                        <button class="btn btn-success">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
